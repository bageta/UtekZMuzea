<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <screen id="start" controller="editor.MainScreen">
        <layer id="background" backgroundColor="#003f" childLayout="center">
            <image filename="Interface/images/background.png" width="100%" height="100%"></image>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <text text="Utek Z Muzea" font="Interface/Fonts/Default.fnt" height="100%" width="100%" color='#000f' />
            </panel>
            <panel id="panel_mid" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#0f08">
                <text text="editor levelu, vytvorte novy level, nebo upravte stavajici" font="Interface/Fonts/Default.fnt" wrap="true" color="#000f" />
            </panel>
            <panel id="panel_bottom" height="50%" width="75%" align="center" childLayout="vertical" backgroundColor="#00f8">
                <panel id="panel_bottom_upper" height="25%" width="100%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <control name="button" label="Vytvorit level" id="newLevelButton" align="center" valign="center" visibleToMouse="true">
                        <interact onClick="newLevel()"/>
                    </control>
                </panel>
                <panel id="panel_bottom_center" height="25%" width="100%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <control name="button" label="Upravit level" id="editLevelButton" align="center" valign="center" visibleToMouse="false">
                        <interact onClick="editLevel()"/>
                    </control>
                </panel>
                <panel id="panel_bottom_lower" height="25%" width="100%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <control name="button" label="Ukoncit" id="exitGameButton" align="center" valign="center" visibleToMouse="true">
                        <interact onClick="quitEditor()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="load" controller="editor.MainScreen">
        <layer id="foreground" childLayout="vertical">
            <panel id="top" childLayout="vertical">
                <control name="listBox" id="file_list" selection = "single" width="100%" height="100%" vertical="optional" horizontal="optional" displayItems="10" />
            </panel>
            <panel id="bottom" childLayout="horizontal">
                <panel id="left" width="50%" height="100%" childLayout="center">
                    <control name="button" label="Upravit">
                        <interact onClick="editLevel()" />
                    </control>
                </panel>
                <panel id="right" width="50%" height="100%" childLayout="center">
                    <control name="button" label="Zrusit">
                        <interact onClick="cancel()" />
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="editing" controller="editor.EditingScreen">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" visibleToMouse="false" height="75%" width="100%" align="center" childLayout="center" backgroundColor="#0000">
            </panel>
            <panel id="panel_bottom" height="25%" width="100%" align="center" valign="bottom" childLayout="horizontal" backgroundColor="#ffff">
                <panel id="bottom_left" height="100%" width="85%" aling="left" childLayout="vertical" backgroundColor="#f008">
                    <panel id="upper_controls" height="50%" width="100%" childLayout="horizontal">
                        <control name="button" id="roomButton" label="pridat mistnost" width="25%" height="100%" valign="center">
                            <interact onClick="addRoom()" />
                        </control>
                        <panel id="item_panel" height="100%" width="25%" childLayout="vertical">
                            <control name="dropDown" id="item_drop_down" width="100%" height="50%" displatItems="3"/>
                            <control name="button" id="itemButton" label="pridat vec" width="100%" height="50%" valign="center">
                                <interact onClick="addItem()" />
                            </control>    
                        </panel>
                        <control name="button" id="delete" label="odstranit" width="25%" height="100%" valign="center">
                            <interact onClick="delete()" />
                        </control>
                        <control name="button" id="doorsButton" label="pridat dvere" width="25%" height="100%" valign="center"> 
                            <interact onClick="addDoor()" />
                        </control>
                    </panel>
                    <panel id="lower_controls" height="50%" width="100%" childLayout="horizontal">
                        <control name="button" id="select_start_button" label="Zvolit Start" width="25%" height="100%">
                            <interact onClick="selectStart()"/>
                        </control>
                        <control name="button" id="select_finish_button" label="Zvolit Cil" width="25%" height="100%">
                            <interact onClick="selectFinish()"/>
                        </control>
                        <control name="button" id="toggle_aloved" label="Uzamknout/Odemknout" width="25%" height="100%">
                            <interact onClick="toggleAloved()"/>
                        </control>
                        <control name="button" id="obstacle_button" label="Nastavit prekazky" width="28%" height="100%">
                            <interact onClick="setObstacles()"/>
                        </control>
                    </panel>
                </panel>
                <panel id="bottom_right" height="100%" width="15%" childLayout="vertical" backgroundColor="#00f8">
                    <control name="button" label="Ulozit" width="100%" height="33%">
                        <interact onClick="save()" />
                    </control>
                    <control name="button" label="Ulozit jako..." width="100%" height="33%">
                        <interact onClick="saveAs()" />
                    </control>
                    <control name="button" label="Konec" width="100%" height="33%">
                        <interact onClick="exitToMenu(start)" />
                    </control>
                </panel>        
            </panel>
        </layer>
    </screen>
    <screen id="obstacle_select" controller="editor.EditingScreen">
        <layer id="foreground" childLayout="vertical">
            <panel id="upper" width="100%" height="80%" childLayout="vertical">
                <control id="scroll_panel" name="scrollPanel" width="100%" height="100%" horizontal="false">
                    <panel id="scroll_inside" width="100%" height="100%" childLayout="vertical" />
                </control>
            </panel>
            <panel id="lower" width="100%" height="20%" childLayout="horizontal">
                <panel id="sub_left" width="50%" height="100%" childLayout="vertical">
                    <control name="button" id="ok" label="Ok">
                        <interact onClick="saveObstacles()" />
                    </control>
                </panel>
                <panel id="sub_right" width="50%" height="100%" childLayout="vertical">
                    <control name="button" id="cancel" label="Zrusit">
                        <interact onClick="cancel()" />
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="save_as" controller="editor.EditingScreen">
        <layer id="foreground" childLayout="vertical">
            <panel id="top" width="100%" height="80%" childLayout="vertical">
                <panel id="upper" width="100%" height="80%" childLayout="vertical">
                    <control name="listBox" id="file_list" selection = "single" width="100%" vertical="optional" horizontal="optional" displayItems="10"/>
                </panel>
                <panel id="lower" width="100%" height="20%" childLayout="horizontal">
                    <control name="textfield" id="file_name"/>
                </panel>
            </panel>
            <panel id="bottom" width="100%" height="20%" childLayout="horizontal">
                <panel id="left" width="50%" height="100%" childLayout="center">
                    <control name="button" id="ok" label="Ulozit">
                        <interact onClick="saveAsConfirm()" />
                    </control>  
                </panel>
                <panel id="right" width="50%" height="100%" childLayout="center">
                    <control name="button" id="cancel" label="Zrusit">
                        <interact onClick="cancel()" />
                    </control> 
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
