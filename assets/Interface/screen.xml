<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <screen id="start" controller="game.StartScreen">
        <layer id="background" backgroundColor="#000f" childLayout="vertical">
            <image filename="Interface/images/background.png" width="100%" height="100%"></image>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <text text="Utek Z Muzea" font="Interface/Fonts/Default.fnt" height="100%" width="100%" color='#000f' />
            </panel>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center" backgroundColor="#0f08">
                <text text="zatim v tezce ranem stadiu vyvoje" font="Interface/Fonts/Default.fnt" wrap="true" color="#000f" />
            </panel>
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" backgroundColor="#00f8">
                <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <control name="button" label="Start game" id="startButton" align="center" valign="center" visibleToMouse="true">
                        <interact onClick="startGame(hud)"/>
                    </control>
                </panel>
                <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <control name="button" label="Quit" id="exitGameButton" align="center" valign="center" visibleToMouse="true">
                        <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="hud" controller="game.InGameState">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" visibleToMouse="false" height="75%" width="100%" align="center" childLayout="center" backgroundColor="#0000">
            </panel>
            <panel id="panel_bottom" height="25%" width="100%" align="center" valign="bottom" childLayout="horizontal" backgroundColor="#ffff">
                <panel id="bottom_left" height="100%" width="50%" aling="left" childLayout="horizontal" backgroundColor="#f008">
                    <control name="button" label="1.obstacle" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(1)" />
                    </control>
                    <control name="button" label="2.obstacle" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(2)" />
                    </control>
                    <control name="button" label="3.obstacle" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(3)" />
                    </control>
                    <control name="button" label="4.obstacle" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(4)" />
                    </control>
                </panel>
                <panel id="bottom_center" height="100%" width="40%" childLayout="horizontal" backgroundColor="#0f08">
                    <control id="timeLabel" name="label" color="#000" text="Tady bude zbyvajici cas po ktery je zlodeje treba zadrzet" width="100%" height="100%" />
                </panel>
                <panel id="bottom_right" height="100%" width="10%" childLayout="vertical" backgroundColor="#00f8">
                    <control name="button" label="Pauza" width="100%" height="50%">
                        <interact onClick="pause()" />
                    </control>
                    <control name="button" label="Konec" width="100%" height="50%">
                        <interact onClick="exitToMenu(start)" />
                    </control>
                </panel>        
            </panel>
        </layer>
    </screen>
</nifty>
