<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <screen id="start" controller="menu.StartScreen">
        <layer id="background" backgroundColor="#000f" childLayout="vertical">
            <image filename="Interface/images/background.png" width="100%" height="100%"></image>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <text text="Utek Z Muzea" font="Interface/Fonts/Default.fnt" height="100%" width="100%" color='#000f' />
            </panel>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center" backgroundColor="#0f08">
                <text text="zvolte jednu z moznosti:" font="Interface/Fonts/Default.fnt" wrap="true" color="#000f" />
            </panel>
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" backgroundColor="#00f8">
                <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <control name="button" label="Zacit hru" id="startButton" align="center" valign="center" visibleToMouse="true">
                        <interact onClick="changeScreen(level_select)"/>
                    </control>
                </panel>
                <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <control name="button" label="Konec" id="exitGameButton" align="center" valign="center" visibleToMouse="true">
                        <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="level_select" controller="menu.StartScreen">
        <layer id="foreground" childLayout="vertical">
            <panel id="tabs_container" height="80%" width="100%" childLayout="vertical">
                <control name="nifty-tabs" id="tabs">
                    <control name="nifty-tab" caption="Muzeum 1" id="tab_1">
                        <panel id="tab_panel_1" childLayout="vertical">
                            <panel id="tabbed_upper" childLayout="horizontal" width="100%" height="30%">
                                <control name="button" label="Level 1" id="butt_1" width="25%" height="100%">
                                    <interact onClick="startGame(level1)" />
                                </control>
                                <control name="button" label="Level 2" id="butt_2" width="25%" height="100%">
                                    <interact onClick="startGame(level2)" />
                                </control>
                                <control name="button" label="Level 3" id="butt_3" width="25%" height="100%">
                                    <interact onClick="startGame(level3)" />
                                </control>
                                <control name="button" label="Level 4" id="butt_4" width="25%" height="100%">
                                    <interact onClick="startGame(level4)" />
                                </control>
                            </panel>
                            <panel id="tabbed_middle" childLayout="horizontal" width="100%" height="30%">
                                <control name="button" label="Level 5" id="butt_5" width="25%" height="100%">
                                    <interact onClick="startGame(level5)" />
                                </control>
                                <control name="button" label="Level 6" id="butt_6" width="25%" height="100%">
                                    <interact onClick="startGame(level6)" />
                                </control>
                                <control name="button" label="Level 7" id="butt_7" width="25%" height="100%">
                                    <interact onClick="startGame(level7)" />
                                </control>
                                <control name="button" label="Level 8" id="butt_8" width="25%" height="100%">
                                    <interact onClick="startGame(level8)" />
                                </control>
                            </panel>
                            <panel id="tabbed_bottom" childLayout="horizontal" width="100%" height="30%">
                                <control name="button" label="Level 9" id="butt_9" width="25%" height="100%">
                                    <interact onClick="startGame(level9)" />
                                </control>
                                <control name="button" label="Level 10" id="butt_10" width="25%" height="100%">
                                    <interact onClick="startGame(level10)" />
                                </control>
                                <control name="button" label="Level 11" id="butt_11" width="25%" height="100%">
                                    <interact onClick="startGame(level11)" />
                                </control>
                                <control name="button" label="Level 12" id="butt_12" width="25%" height="100%">
                                    <interact onClick="startGame(level12)" />
                                </control>
                            </panel>
                        </panel>
                    </control>
                    <control name="nifty-tab" caption="Vlastni levely" id="tab_2">
                    </control>
                </control>
            </panel>
            <panel id="bottom" height="20%" width="100%" childLayout="horizontal">
                <control name="button" id="backToMenu" label="Zpet">
                    <interact onClick="changeScreen(start)" />
                </control>
            </panel>
        </layer>
    </screen>
    <screen id="hud" controller="game.InGameState">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" visibleToMouse="false" height="75%" width="100%" align="center" childLayout="center" backgroundColor="#0000">
            </panel>
            <panel id="panel_bottom" height="25%" width="100%" align="center" valign="bottom" childLayout="horizontal" backgroundColor="#ffff">
                <panel id="bottom_left" height="100%" width="50%" aling="left" childLayout="horizontal" backgroundColor="#f008">
                    <control name="button" id="obstacle1" label="empty" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(1)" />
                    </control>
                    <control name="button" id="obstacle2" label="empty" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(2)" />
                    </control>
                    <control name="button" id="obstacle3" label="empty" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(3)" />
                    </control>
                    <control name="button" id="obstacle4" label="empty" width="25%" height="65%" valign="center">
                        <interact onClick="obstacleButtonPressed(4)" />
                    </control>
                </panel>
                <panel id="bottom_center" height="100%" width="40%" childLayout="horizontal" backgroundColor="#0f08">
                    <control id="timeLabel" name="label" color="#000" text="Tady bude zbyvajici cas po ktery je zlodeje treba zadrzet" width="100%" height="100%" />
                </panel>
                <panel id="bottom_right" height="100%" width="10%" childLayout="vertical" backgroundColor="#00f8">
                    <control name="button" label="Pauza" width="100%" height="50%">
                        <interact onClick="pause()" />
                    </control>
                    <control name="button" label="Konec" width="100%" height="50%">
                        <interact onClick="exitToMenu(start)" />
                    </control>
                </panel>        
            </panel>
        </layer >
    </screen>
    <screen id="pause" controller="game.InGameState">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="main" height="25%" width="100%" align="center" valign="center" childLayout="horizontal" backgroundColor="#ffff">
                <control name="button" label="Pokracovat" width="30%" height="30%" valign="center">
                    <interact onClick="unpause()" />
                </control>
                <control name="button" label="Restartovat" width="30%" height="30%" valign="center">
                    <interact onClick="restart()" />
                </control>
                <control name="button" label="Ukoncit" width="30%" height="30%" valign="center">
                    <interact onClick="exitToMenu(start)" />
                </control>
            </panel>
        </layer>
    </screen>
    <screen id="win" controller="game.InGameState">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="main" height="25%" width="100%" align="center" valign="center" childLayout="horizontal" backgroundColor="#ffff">
                <text text="Gratuluji level dokoncen :]" font="Interface/Fonts/Default.fnt" wrap="true" color="#000f" />
                <control name="button" label="Dalsi level" width="30%" height="30%" valign="center">
                    <interact onClick="unpause()" />
                </control>
                <control name="button" label="Restartovat" width="30%" height="30%" valign="center">
                    <interact onClick="restart()" />
                </control>
                <control name="button" label="Ukoncit" width="30%" height="30%" valign="center">
                    <interact onClick="exitToMenu(start)" />
                </control>
            </panel>
        </layer>
    </screen>
        <screen id="fail" controller="game.InGameState">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="main" height="25%" width="100%" align="center" valign="center" childLayout="horizontal" backgroundColor="#ffff">
                <text text="Bohuzel zlodej utekl :[" font="Interface/Fonts/Default.fnt" wrap="true" color="#000f" />
                <control name="button" label="Restartovat" width="30%" height="30%" valign="center" >
                    <interact onClick="restart()" />
                </control>
                <control name="button" label="Ukoncit" width="30%" height="30%" valign="center">
                    <interact onClick="exitToMenu(start)" />
                </control>
            </panel>
        </layer>
    </screen>
</nifty>